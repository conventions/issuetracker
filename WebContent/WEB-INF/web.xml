<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">	
	<display-name>issuetracker</display-name>
	
	<!-- configuração banco -->
	<resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/issuetracker</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <!-- habilita bean manager para o tomcat (no projeto estamos utilizando BeanManagerProvider fornecido pelo CODI que é independente de container) 
    <resource-env-ref>
        <resource-env-ref-name>IntegrationBeanManager</resource-env-ref-name>
        <resource-env-ref-type>javax.enterprise.inject.spi.BeanManager</resource-env-ref-type>
    </resource-env-ref> -->
    

	<!--
		* Valid values are “Development”, “UnitTest”, “SystemTest”, or “Production”,
		  corresponding to the enum constants of the class javax.faces.application.ProjectStage;
		* Change to "Production" when you are ready to deploy;
	-->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<context-param>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>server</param-value>
	</context-param>
	
	<context-param>
		<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<context-param>
		<param-name>INITIAL_PAGE</param-name>
		<param-value>/pages/login.xhtml</param-value>
	</context-param>
	
	
	
